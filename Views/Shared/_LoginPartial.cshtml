@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="flex items-center space-x-3">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="px-3 py-2 text-sc-accent hover:text-teal-400 font-semibold transition duration-150" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            Hello @User.Identity?.Name!
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="w-full px-4 py-2 border border-sc-accent rounded-lg text-sm font-medium text-sc-accent bg-transparent hover:bg-sc-accent hover:text-sc-dark transition duration-200">
                Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="px-4 py-2 text-sm font-medium text-sc-accent hover:text-teal-400 transition duration-150" asp-area="Identity" asp-page="/Account/Register">
            Register
        </a>
    </li>
    <li class="nav-item">
        <a class="px-4 py-2 text-sm font-medium rounded-lg text-sc-dark bg-sc-accent hover:bg-sc-hover transition duration-200" asp-area="Identity" asp-page="/Account/Login">
            Login
        </a>
    </li>
}
</ul>